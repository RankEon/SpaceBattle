<Page x:Name="MainMenu1" x:Class="SpaceInvaders.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceInvaders"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MainMenu">

    <Grid Background="Black">
        <Image Source="Resources\Logo.png" Stretch="UniformToFill" />
        <Button x:Name="btnStartGame" Content="START GAME" HorizontalAlignment="Left" Margin="0,448,0,0" VerticalAlignment="Top" Width="446" Height="124" Background="#FF3E3B3B" Foreground="White" FontSize="72" Click="btnStartGame_Click"/>
        <TextBlock x:Name="textBox" HorizontalAlignment="Left" Height="268" Margin="719,0,0,0" VerticalAlignment="Top" Width="281" Background="Black" Foreground="White" FontSize="20">
                Right Arrow = Move Right<LineBreak />
                Left Arrow = Move Left<LineBreak />
                Space = Fire<LineBreak />
                P = Pause
        </TextBlock>
    </Grid>
</Page>
